<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>My Portfolio</title>
  <link rel="stylesheet" href="style.css" />
  <script src="https://cdn.jsdelivr.net/npm/github-contributions-chart@latest"></script>
</head>
<body>
  <header>
    <h1>Greg Phamson</h1>
    <nav>
      <a href="#about">About Me</a>
      <a href="#projects">Projects</a>
      <a href="#github">GitHub</a>
      <a href="/auth/google" id="login-btn">Login</a>
      <a href="/logout" id="logout-btn" style="display: none;">Logout</a>
    </nav>
  </header>

  <main>
    <section id="about">
      <h2>About Me</h2>
      <p>Hi! I'm Greg!</p>
    </section>

    <section id="projects">
      <h2>Projects</h2>
        <% if (projects.length > 0) { %>
          <% projects.forEach(project => { %>
            <div class="project-card">
              <h3><%= project.title %></h3>
              <p><%= project.description %></p>
            </div>
            <br>
          <% }) %>
        <% } else { %>
          <p>No projects found.</p>
        <% } %>


      <div id="edit-form" style="display: none;">
        <h3>Add a Project</h3>
        <form id="project-form">
          <input type="text" id="title" name="title" placeholder="Project Title" required />
          <textarea id="description" name="description" placeholder="Description" required></textarea>
          <input type="url" id="link" name="link" placeholder="Project Link (optional)" />
          <button type="submit">Save Project</button>
        </form>
      </div>
    </section>

    <section id="github">
      <h2>GitHub Contributions</h2>
      <iframe
        src="https://ghchart.rshah.org/3b82f6/thongish"
        frameborder="0"
        width="100%"
        height="200"
        title="GitHub Contributions"
      ></iframe>
    </section>

  </main>

  <footer>
    <p>&copy; 2025 Kevin Pham</p>
  </footer>

</body>
</html>
